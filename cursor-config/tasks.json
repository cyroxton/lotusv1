{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "./gradlew build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gradle"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "./gradlew test",
      "group": "test",
      "problemMatcher": ["$gradle"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "./gradlew installDebug",
      "group": "build",
      "problemMatcher": ["$gradle"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "./gradlew clean",
      "group": "build",
      "problemMatcher": ["$gradle"]
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "./gradlew lint",
      "group": "build",
      "problemMatcher": ["$gradle"]
    }
  ]
} 